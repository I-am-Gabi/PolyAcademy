<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:layout_height="200dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_event"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        card_view:cardCornerRadius="8dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="4dp"

        android:clickable="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!-- A photo on the left. We'll just use the launcher icon. -->
            <ImageView
                android:id="@+id/event_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_launcher"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/title_event"
                style="style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/event_photo"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-condensed"
                android:lineSpacingMultiplier="0.85"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/description_event"
                style="style/TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/event_photo"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title_event"
                android:maxLength="220"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>