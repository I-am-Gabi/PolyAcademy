<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_campus"
    android:layout_gravity="center|center_vertical"
    android:background="@drawable/campus_map"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CAMPUS"
        android:id="@+id/Title"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_learning"
        android:id="@+id/buttonLearning"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/buttonTemplier"
        android:layout_toEndOf="@+id/Title" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_cantine"
            android:id="@+id/buttoncantine"
            android:layout_gravity="right"
            android:layout_row="6"
            android:layout_column="8"
            android:layout_below="@+id/buttonTemplier"
            android:layout_toEndOf="@+id/buttonLearning"
            android:layout_marginTop="87dp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_templier"
            android:id="@+id/buttonTemplier"
            android:layout_gravity="right"
            android:layout_row="7"
            android:layout_column="8"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="77dp" />

</RelativeLayout>